@model AspCoreMVCExample.Models.Employee

<h1>Edit Profile</h1>
<form asp-action="Edit" method="post" class="form-horizontal">
    <div class="form-group">
        <label class="control-label">Id</label>
        @Html.TextBoxFor(Model => Model.eid, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group">
        <label class="control-label">Name</label>
        @Html.TextBoxFor(Model => Model.ename, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label class="control-label">Address</label>
        @Html.TextAreaFor(Model => Model.eaddr, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label class="control-label">Salary</label>
        @Html.TextBoxFor(Model => Model.esal, new { @class = "form-control" })
    </div>
    <div>
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>
